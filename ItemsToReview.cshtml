@model List<Blue_Ribbon.ViewModels.ReviewLogViewModel>
@* This section-The Partial View for the InHouseReviews. Should display local reviews in tab 5 of Customer Dashboard*@

<div>
    @foreach (var item in Model)
    {
            <!-- Displays reviewed items -->
        <div class="row dashOpenItem">
            <!-- Column Left: ImageURL + ASIN/ID -->
            <div class="col-md-2 col-xs-3 text-center">
                <!-- ImageURL from Deal here -->
                <img src=@item.ImageUrl class="dashboardRowImage" /><br />
                Item# <b>@item.ASIN</b>
                <br />

            </div>
            <!-- Column Center: Item Name, DateCodeGiven -->
            <!-- TODO: May want to add Discount Code -->
            <div class="col-md-6 col-xs-5">
                <div class="row text-center">
                    <br />
                    <b>@item.ProductName </b> <br />
                </div>
                <hr />
                <div class="row">
                    Your received deal on: @item.SelectedDate.ToShortDateString()
                </div>
            </div>
            <div class="col-md-1 col-xs-1">

            </div>
            <!-- Column Right: (Link to purchase item), Link to view Review -->
            <div class="col-md-3 col-xs-2">
                <!-- Button to write review, to ReviewLog Edit page-->
                <div class="row">
                    <br />
                    <p>
                        <span class="btn btn-primary" style="align-content:center; white-space:normal;">

                            @Html.ActionLink("Write Your Review Here", "Edit", "ReviewLog", new { id = item.ReviewLogId }, new { @style = "color : white; text-decoration: none;" })
                            <span class="glyphicon glyphicon-new-window"></span>
                        </span>
                    </p>                
                </div>
                <!-- Button to the vendor's page to purchase product -->
                <div class="row">
                    <p>
                        
                     <a href="@item.GetVendorsURL" target="_blank" 
                        class="btn btn-success" 
                        style="align-content:center; white-space:normal;">Purchase item here! 
                        <span class="glyphicon glyphicon-new-window"></span></a>
                       
                    </p>

                </div>

            </div>

        </div>
        <hr />
    }
</div>
